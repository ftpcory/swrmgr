#!/usr/bin/env bash
# Hook: stack:create:after
# Creates Bitwarden entries for default stack users
set -euo pipefail

stack="${1}"

# Only run if Bitwarden is configured
[[ -n "${SWRMGR_BW_ORG_ID:-}" ]] || exit 0

echo "Creating Bitwarden credentials for ${stack}..."

# Plugin consumers define which users to create via hooks
# This is an example â€” customize for your application
run_hooks "bitwarden:user-create" "${stack}"
